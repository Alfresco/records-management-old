<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="TestNG AllTestSuite" verbose="1" time-out="300000">

    <test name="classification">
        <groups>
            <run>
                <include name="integration"/>
                <exclude name="ignored"/>
            </run>
        </groups>
        <packages>
            <package name="org.alfresco.test.integration.*"/>
        </packages>
    </test>

    <test name="changeUser">
        <groups>
            <run>
                <include name="changeUser"/>
            </run>
        </groups>
        <packages>
            <package name="org.alfresco.test.integration.*"/>
        </packages>
    </test>

    <test name="checkChangeUserWorked">
        <groups>
            <run>
                <include name="checkChangeUserWorked"/>
            </run>
        </groups>
        <packages>
            <package name="org.alfresco.test.integration.*"/>
        </packages>
    </test>

</suite>